@{
IEnumerable<Messenger> messengers = Model;
}

<link rel="stylesheet" href="~/css/Home/Main.css" />
<link rel="stylesheet" href="~/css/Home/MessengersZone.css" />
<link rel="stylesheet" href="~/css/Home/OpenMessengers.css" />
<div class="messengers-area">
    <div class="messenger-box" id="messengers-zone">
        <div class="create-group">
            <a class="button-type" method="post" asp-controller="Messenger" asp-action="CreateGroup">Створити групу</a>
        </div>

        <div class="messengers-list" id="messengers">
        </div>
    </div>

    <div class="messenger-box" id="open-messenger">
        <div id="chatroom"></div>

        <div id="inputForm">
            <input type="text" id="message" />
            <input type="button" id="sendContent" value="Відправити" />
        </div>
    </div>
</div>


<script type="text/javascript">
    let messengersData = @Html.Raw(JsonConvert.SerializeObject(Model));
</script>
